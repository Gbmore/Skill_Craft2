<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiz Game</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f9;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .quiz-container {
      background: white;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
      max-width: 500px;
      width: 100%;
    }

    h2 {
      margin-bottom: 15px;
    }

    .options {
      margin-bottom: 15px;
    }

    .options label {
      display: block;
      margin: 8px 0;
      cursor: pointer;
    }

    button {
      padding: 10px 20px;
      font-size: 1em;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      background: #007bff;
      color: white;
    }

    #result {
      font-size: 1.2em;
      font-weight: bold;
      margin-top: 15px;
    }
  </style>
</head>
<body>
  <div class="quiz-container">
    <h2 id="question">Question text</h2>
    <div class="options" id="options"></div>
    <button id="next">Next</button>
    <div id="result"></div>
  </div>

  <script>
    const quizData = [
      {
        type: "single",
        question: "Which is the capital of France?",
        options: ["Berlin", "Madrid", "Paris", "Rome"],
        answer: "Paris"
      },
      {
        type: "multi",
        question: "Which of the following are programming languages?",
        options: ["Python", "HTML", "JavaScript", "CSS"],
        answer: ["Python", "JavaScript"]
      },
      {
        type: "fill",
        question: "Fill in the blank: The sun rises in the ____.",
        answer: "east"
      }
    ];

    let currentIndex = 0;
    let score = 0;

    const questionEl = document.getElementById("question");
    const optionsEl = document.getElementById("options");
    const nextBtn = document.getElementById("next");
    const resultEl = document.getElementById("result");

    function loadQuestion() {
      optionsEl.innerHTML = "";
      resultEl.textContent = "";

      const currentQ = quizData[currentIndex];
      questionEl.textContent = currentQ.question;

      if (currentQ.type === "single") {
        currentQ.options.forEach(opt => {
          const label = document.createElement("label");
          label.innerHTML = `<input type="radio" name="option" value="${opt}"> ${opt}`;
          optionsEl.appendChild(label);
        });
      } else if (currentQ.type === "multi") {
        currentQ.options.forEach(opt => {
          const label = document.createElement("label");
          label.innerHTML = `<input type="checkbox" value="${opt}"> ${opt}`;
          optionsEl.appendChild(label);
        });
      } else if (currentQ.type === "fill") {
        const input = document.createElement("input");
        input.type = "text";
        input.id = "fillInput";
        input.placeholder = "Type your answer";
        optionsEl.appendChild(input);
      }
    }

    function checkAnswer() {
      const currentQ = quizData[currentIndex];
      let userAnswer;

      if (currentQ.type === "single") {
        const selected = document.querySelector("input[name='option']:checked");
        if (selected) userAnswer = selected.value;
      } else if (currentQ.type === "multi") {
        const selected = [...document.querySelectorAll("input[type='checkbox']:checked")].map(cb => cb.value);
        userAnswer = selected;
      } else if (currentQ.type === "fill") {
        const input = document.getElementById("fillInput");
        if (input) userAnswer = input.value.trim().toLowerCase();
      }

      // Check correctness
      if (currentQ.type === "single") {
        if (userAnswer === currentQ.answer) score++;
      } else if (currentQ.type === "multi") {
        if (JSON.stringify(userAnswer.sort()) === JSON.stringify(currentQ.answer.sort())) {
          score++;
        }
      } else if (currentQ.type === "fill") {
        if (userAnswer === currentQ.answer.toLowerCase()) score++;
      }
    }

    nextBtn.addEventListener("click", () => {
      checkAnswer();
      currentIndex++;
      if (currentIndex < quizData.length) {
        loadQuestion();
      } else {
        document.querySelector(".quiz-container").innerHTML =
          `<h2>Quiz Finished!</h2><p>Your Score: ${score} / ${quizData.length}</p>`;
      }
    });

    // Initialize
    loadQuestion();
  </script>
</body>
</html>
